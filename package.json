{
	"name": "athena-flow-cli",
	"description": "Workflow runtime for Claude Code with hooks, plugins, and interactive terminal observability",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lespaceman/athena-flow.git"
	},
	"homepage": "https://github.com/lespaceman/athena-flow#readme",
	"bugs": {
		"url": "https://github.com/lespaceman/athena-flow/issues"
	},
	"keywords": [
		"cli",
		"claude",
		"terminal",
		"ink",
		"hooks",
		"dashboard"
	],
	"version": "0.3.0",
	"license": "MIT",
	"bin": {
		"athena": "dist/cli.js",
		"athena-flow": "dist/cli.js",
		"athena-hook-forwarder": "dist/hook-forwarder.js"
	},
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"dev": "tsup --watch",
		"start": "tsup && node dist/cli.js",
		"dev:debug": "tsup && DEV=true node dist/cli.js",
		"devtools": "ELECTRON_DISABLE_SANDBOX=1 react-devtools",
		"perf:tui": "node scripts/perf-runner.mjs --mode=full",
		"perf:cpu": "node scripts/perf-runner.mjs --mode=cpu --no-app-profile",
		"perf:trace": "node scripts/perf-runner.mjs --mode=trace --no-app-profile",
		"perf:heap": "node scripts/perf-runner.mjs --mode=heap --no-app-profile",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint:format": "git ls-files -z | xargs -0 prettier --check --ignore-unknown",
		"lint:eslint": "eslint .",
		"lint:dead": "knip --strict --exclude dependencies,unlisted,binaries",
		"lint": "npm run lint:format && npm run lint:eslint",
		"format": "prettier --write .",
		"prepublishOnly": "npm run lint && npm run typecheck && npm run lint:dead && npm test && npm run build"
	},
	"files": [
		"dist",
		"!dist/**/*.js.map"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"better-sqlite3": "^12.6.2",
		"cli-highlight": "^2.1.11",
		"ink": "^6.7.0",
		"marked": "^15.0.12",
		"marked-terminal": "^7.3.0",
		"meow": "^13.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.2.4",
		"use-context-selector": "^1.4.4"
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@testing-library/react": "^16.3.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/marked-terminal": "^6.1.1",
		"@types/node": "^25.0.10",
		"@types/react": "^19.0.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"chalk": "^5.3.0",
		"eslint": "^9.0.0",
		"eslint-plugin-react": "^7.37.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"ink-testing-library": "^4.0.0",
		"jsdom": "^27.4.0",
		"knip": "^5.85.0",
		"prettier": "^3.0.0",
		"react-devtools": "^6.1.5",
		"react-devtools-core": "^6.1.5",
		"tsup": "^8.5.1",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.0.0",
		"vitest": "^3.0.0"
	},
	"prettier": "@vdemedes/prettier-config"
}
